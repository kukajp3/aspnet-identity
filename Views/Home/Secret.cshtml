@using aspnet_identity.Extensions
@{
    ViewData["Title"] = "Secret";
}
<h1>@ViewData["Title"]</h1>

<p>Secret.</p>

@{
    if (this.IfClaim("Produtos", "Adicionar"))
    {
        <p>Você só verá isso se tiver permissao de adicionar!</p>
    }
}

<div>
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context,"Produtos", "Adicionar")
</div>

<div>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos", "Adicsionar"))">Excluir</a>
</div>